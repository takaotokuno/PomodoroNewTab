{
  "name": "Pomodoro New Tab",
  "version": "1.0.0",
  "description": "A simple Pomodoro timer for your new tab page.",
  "manifest_version": 3,
  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  "permissions": ["storage", "tabs", "notifications", "alarms"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://youtube.com/*",
        "https://www.youtube.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://pixiv.net/*",
        "https://www.pixiv.net/*",
        "https://instagram.com/*",
        "https://www.instagram.com/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ]
}
