{
  "name": "pomodoro-new-tab",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple Pomodoro timer for your new tab page.",
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run unit",
    "test:integration": "vitest run integration",
    "test:e2e": "vitest run e2e",
    "test:scripts": "vitest run scripts",
    "test:watch": "vitest --watch",
    "test:ci": "vitest --run",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md}\"",
    "prepare": "husky install",
    "build": "node scripts/build.js",
    "package": "node scripts/package.js",
    "tag": "node scripts/tag.js",
    "tag:beta": "node scripts/tag.js --beta",
    "publish:chrome": "node scripts/publish-chrome.js",
    "publish:edge": "node scripts/publish-edge.js"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "9.1.7",
    "prettier": "^2.8.8",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "node-fetch": "^3.3.2",
    "picomatch": "^4.0.3"
  }
}
